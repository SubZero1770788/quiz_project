@model quiz_project.ViewModels.QuizSummaryViewModel

<h3>Congratulations on finishing the quiz</h3>

<div class="container">
    <div class="row">Here's your score:</div>
    <div>
        @Model.Score / @Model.TotalScore
    </div>
</div>

<div class="container">
    <h4>Leaderboard</h4>
    <div class="row">
        @for (int i = 0; i < @Model.TopPlayerScores.Count(); i++)
        {
            var playerScore = @Model.TopPlayerScores[i];

            <div id="score-@i">
                @playerScore.UserName | score @playerScore.PlayerScore
            </div>
        }
    </div>
</div>