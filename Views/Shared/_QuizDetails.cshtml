@foreach (QuizViewModel quizViewModel in @Model)
{
    <div class="card" style="width: 30rem; margin: 10px;">
        <div class="card-body">
            <h4 class="card-title">@quizViewModel?.Title</h4>
            <p class="card-text">@quizViewModel?.Description</p>
            <div class="row">
                <button class="btn btn-info col" style="margin: 2px">
                    <a class="nav-link text-white" asp-area="">Access</a>
                </button>
                <form asp-controller="Quiz" asp-action="Edit" method="get" class="col">
                    <input type="hidden" name="QuizId" value="@quizViewModel?.QuizId" />
                    <button type="submit" class="btn btn-warning text-white" style="margin: 2px">Edit</button>
                </form>
                <form asp-controller="Quiz" asp-action="Delete" method="post" class="col">
                    <input type="hidden" name="Id" value="@quizViewModel?.QuizId" />
                    <button type="submit" class="btn btn-danger text-white" style="margin: 2px">Delete</button>
                </form>
            </div>
        </div>
    </div>
}